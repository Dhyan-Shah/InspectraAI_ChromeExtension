{
  "manifest_version": 3,
  "name": "InspectraAI",
  "description": "AI-powered code review on any webpage. Detect bugs, optimize performance, and follow best practices instantly.",
  "version": "1.0.0",

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "action": {
    "default_title": "InspectraAI â€“ Review Code with AI",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],

  "host_permissions": ["http://localhost:5000/*"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "editor.html",
        "editor.js",
        "popup.css",
        "prism.js",
        "prism.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
